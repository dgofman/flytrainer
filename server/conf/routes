# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /init                       controllers.HomeController.initDatabase()

# Test post request
POST    /login                      controllers.HomeController.login(request: Request)
POST    /create                     controllers.HomeController.create(request: Request)
POST    /activate                   controllers.HomeController.activate(request: Request)
POST    /forgot                     controllers.HomeController.forgot(request: Request)
POST    /reset                      controllers.HomeController.reset(request: Request)
POST    /logout                     controllers.HomeController.logout(request: Request)

POST    /users                      controllers.UserController.users(request: Request)
GET     /users/:id                  controllers.UserController.userById(id: Long)
POST    /users/:id                  controllers.UserController.saveUser(request: Request, id: Long)
DELETE  /users/:id                  controllers.UserController.deleteUser(request: Request, id: Long)

POST    /admin/:id/address          controllers.AddressController.addAddress(request: Request, id: Long)
GET     /admin/:id/address          controllers.AddressController.getAddress(id: Long)
PATCH   /admin/:id/address          controllers.AddressController.updateAddress(request: Request, id: Long)
DELETE  /admin/:id/address/:addId   controllers.AddressController.deleteAddress(request: Request, id: Long, addId: Integer)

POST    /document/file/:userId      controllers.DocumentController.saveFile(request: Request, userId: Long)